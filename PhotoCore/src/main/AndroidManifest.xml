<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunxiaoyu.photocore">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">


        <activity android:name=".core.ui.SxyTakePhotoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".core.ui.SxySelectPhotoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:theme="@style/FullScreenStyle"
            android:name=".core.ui.SxySeePhotoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

    </application>


</manifest>